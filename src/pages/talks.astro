---
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import TalksExplorer from '../components/explorers/TalksExplorer.tsx';
import talks from '../content/talks/talks.json';
import PageWithHero from '../layouts/PageWithHero.astro';
---

<PageWithHero
  title={`${SITE_TITLE} - Talks`}
  description={SITE_DESCRIPTION}
  hero={{
    title: 'Talks',
    subtitle: "Presentations, lectures, and workshops I've delivered at conferences and events.",
    page: 'talks'
  }}
>
  <TalksExplorer client:visible items={talks} />
</PageWithHero>
