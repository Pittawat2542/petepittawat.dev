---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import ProjectsExplorer from '../components/ProjectsExplorer.tsx';
import projects from '../content/projects/projects.json';
import ThemedPageHero from '../components/ThemedPageHero.astro';
import Container from '../components/Container.astro';
---

<BaseLayout title={`${SITE_TITLE} - Projects`} description={SITE_DESCRIPTION}>
  <ThemedPageHero 
    title="Projects" 
    subtitle="Selected research, systems, and prototypes I've built or led." 
    page="projects" 
  />
  <Container class='mt-4'>
    <ProjectsExplorer client:load items={projects} />
  </Container>
</BaseLayout>
