---
import { SITE_TITLE, SITE_DESCRIPTION } from '@/consts';
import { ProjectsExplorer } from '@/components/explorers';
import projects from '@/content/projects/projects.json';
import PageWithHero from '@/layouts/PageWithHero.astro';
---

<PageWithHero
  title={`${SITE_TITLE} - Projects`}
  description={SITE_DESCRIPTION}
  hero={{
    title: 'Projects',
    subtitle: "Selected research, systems, and prototypes I've built or led.",
    page: 'projects',
  }}
  containerClass="glass-section"
>
  <ProjectsExplorer client:visible items={projects} />
</PageWithHero>
