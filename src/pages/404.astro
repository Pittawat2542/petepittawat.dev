---
import BaseLayout from '../layouts/BaseLayout.astro';
import GlassCard from '../components/GlassCard.astro';
import Container from '../components/Container.astro';
Astro.response.status = 404;
---
<BaseLayout title="404 - Page Not Found" description="The page you were looking for doesn't exist.">
  <Container class="mt-12 max-w-screen-lg">
    <GlassCard class="text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-3">404 â€” Page Not Found</h1>
      <p class="mb-6 text-[color:var(--white)]/85">Sorry, we couldn't find the page you're looking for.</p>
      <a href="/" class="inline-flex items-center gap-2 rounded-lg px-4 py-2 ring-1 ring-[color:var(--white)]/15 hover:ring-[color:var(--accent)] text-[color:var(--white)] hover:text-[color:var(--accent)] transition-all font-medium">
        Return home
