---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import profileImage from '../assets/images/profile.jpg';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Github, Instagram, Linkedin } from 'lucide-astro';
import ThemedPageHero from '../components/layout/core/ThemedPageHero';
import Container from '../components/ui/core/Container';
import GlassCard from '../components/ui/core/GlassCard';
import Chip from '../components/ui/core/Chip';
import Prose from '../components/content/Prose';
import timeline from '../content/about/timeline.json';
import publications from '../content/publications/publications.json';
import projects from '../content/projects/projects.json';
import talks from '../content/talks/talks.json';

const totalPublications = publications.length;
const totalProjects = projects.length;
const totalTalks = talks.length;
const makeAccentLabel = (accent?: string) =>
  (accent ?? 'about')
    .split('-')
    .map((segment: string) => segment.charAt(0).toUpperCase() + segment.slice(1))
    .join(' ');

const highlightStats = [
  {
    value: '7+',
    label: 'years in applied AI & creative tech',
    description: 'From early creative coding experiments to production-grade reasoning systems.',
  },
  {
    value: `${totalPublications}`,
    label: 'published papers & deep dives',
    description: 'Exploring creativity, evaluation, and tools that stay reliable in production.',
  },
  {
    value: `${totalProjects}`,
    label: 'shipped projects & open experiments',
    description: 'Prototyping boldly, then hardening what works for partners and teams.',
  },
  {
    value: `${totalTalks}`,
    label: 'talks, workshops & keynotes delivered',
    description: 'Helping communities across APAC build responsible AI workflows.',
  },
];

const focusAreas = [
  {
    emoji: 'üí°',
    title: 'Creative intelligence without collapse',
    description: 'Testing how large models stay imaginative without drifting away from truth.',
    bullets: [
      'When do hallucinations become a useful spark instead of a failure?',
      'How does model scale shift the boundary between imagination and reliability?',
      'Which safety rails keep generative systems playful yet grounded?',
    ],
  },
  {
    emoji: 'üß†',
    title: 'Orchestrating algorithms with LLMs',
    description: 'Pairing classical computing patterns with neural priors to tackle complex tasks.',
    bullets: [
      'Which traditional algorithms resonate‚Äîor clash‚Äîwith probabilistic reasoning?',
      'How do pipeline topologies change when an LLM becomes a black-box oracle?',
      'Where should symbolic structure and neural intuition interleave?',
    ],
  },
  {
    emoji: 'üìè',
    title: 'Evaluation without shortcuts',
    description:
      'Designing resilient evaluation frameworks that keep up with rapidly evolving models.',
    bullets: [
      'Can LLMs deliver structured output as tasks grow multi-dimensional?',
      'How do we observe degradation across scales, prompts, and modalities?',
      'What automation keeps humans focused on insight rather than grading?',
    ],
  },
  {
    emoji: 'ü™Ñ',
    title: 'Prompt architectures in practice',
    description: 'Turning orchestration heuristics into human-centered AI experiences.',
    bullets: [
      'Why do prompt engineering patterns actually work?',
      'What does ‚Äúexploration‚Äù look like when prompts become navigation in latent space?',
      'How can multimodal LLMs power creative tooling and healthcare support systems?',
    ],
  },
];

const craftStacks = [
  {
    title: 'Applied research engineering',
    statement:
      'I build reproducible, resumable evaluation rigs that bridge notebooks, services, and production dashboards.',
    tools: ['Python', 'TypeScript', 'PyTorch', 'Transformers', 'TensorFlow', 'FastAPI'],
    bullets: [
      'Instrument experiments so findings stay auditable, extensible, and easy to reprise.',
      'Context-switch between numerical computing in MATLAB/R and modern LLM tooling.',
      'Use numpy, pandas, matplotlib, and seaborn to shorten the insight loop.',
    ],
  },
  {
    title: 'Full-stack systems & product',
    statement: 'Ship interfaces and services that stay maintainable as teams grow and stakes rise.',
    tools: ['React', 'Astro', 'Next.js', 'Node.js', 'Django', 'Go', 'Java'],
    bullets: [
      'Production experience across web, microservices, and API design, including LINE Shopping.',
      'Delivered mobile apps from native Android to React Native and Flutter rebuilds.',
      'Design background with Figma, Adobe XD, and Photoshop keeps user experience central.',
    ],
  },
  {
    title: 'Ops, assurance & platforms',
    statement:
      'Reliability stays non-negotiable‚Äîtests, automation, and observability are part of the canvas.',
    tools: ['Jest', 'Cypress', 'Playwright', 'Selenium', 'Docker', 'Git', 'Firebase'],
    bullets: [
      'Security and networking foundations inform threat models and review practices.',
      'Support rapid-response teams with structured workflows and clear runbooks.',
      'Work comfortably with SQL/NoSQL and vector stores‚ÄîMongoDB, Neo4j, Pinecone, Milvus, Qdrant.',
    ],
  },
];

const educationEntries = [
  {
    title: 'M.Eng., Intelligent Computer Entertainment Lab, Ritsumeikan University',
    period: '2022 ‚Äî 2024',
    summary: 'Valedictorian focused on creative AI and evaluation tooling.',
    bullets: [
      'Investigated generative creativity and reliability across large language models.',
      'Delivered Typhoon research contributions on reasoning and applied systems.',
    ],
  },
  {
    title: 'B.Sc. Computer Science, KMUTT (First-class honours)',
    period: '2017 ‚Äî 2021',
    summary: 'Petchra Pra Jom Klao Scholarship recipient and academic distinction awardee.',
    bullets: [
      'Earned Jia Ra Nai Petchra Scholarship and Honor Award for program-leading performance.',
      'Name engraved on KMUTT‚Äôs Wall of Honors recognizing the top graduate of the cohort.',
    ],
  },
];

const communityHighlights = [
  {
    title: 'Applied research collaborations',
    description:
      'Early in my journey I joined the Innovative Cognitive Computing Laboratory at KMUTT, partnering closely with clinicians and researchers.',
    bullets: [
      'Led AR, web, and natural language projects that turned ideas into usable systems.',
      'Served as tech lead for Siriraj Hospital collaborations, shaping HFMD research tooling.',
    ],
  },
  {
    title: 'Industry immersion & mentoring',
    description:
      'From LINE Thailand to national innovation programs, I thrive in teams that move fast without losing craft.',
    bullets: [
      'Shipped LINE Shopping features and contributed to the Vue 2 ‚Üí 3 migration across microservices.',
      'Selected for Young Webmaster Camp and Google Tech Challenge; mentored peers as inaugural Google Developer Student Club lead at KMUTT.',
    ],
  },
];

const serviceHighlights = [
  'Directed an eight-person rapid-response team during the COVID-19 outbreak to build KMUTT‚Äôs nationwide donation management platform‚Äî300+ shipments, 50+ hospitals supported.',
  'Spearheaded Junior Programmer Camp XV, delivering admissions and staff tooling that opened computer science pathways for students across Thailand.',
  'Continue to review for conferences and coach communities because sharing expertise compounds impact.',
];

const learningHighlights = [
  'Lifelong learning is ritual: I constantly take online courses, pairing curiosity with deliberate practice.',
  'Regularly tutor classmates and mentees‚Äîteaching is how I stress-test my own understanding.',
  'Connecting disparate topics keeps me inventive and empathic when designing intelligent systems.',
];
---

<BaseLayout title={`${SITE_TITLE} - About`} description={SITE_DESCRIPTION}>
  <div class="about-backdrop" aria-hidden="true">
    <div class="about-backdrop__gradient"></div>
    <div class="about-backdrop__orb"></div>
    <div class="about-backdrop__grid"></div>
  </div>

  <Container className="relative z-10 space-y-16 pb-24">
    <ThemedPageHero
      title="About Pete"
      subtitle="Research engineer building dependable reasoning systems that balance creativity, reliability, and human delight."
      page="about"
    />

    <section id="profile" class="section-canvas">
      <div class="grid gap-6 lg:grid-cols-[minmax(0,1.3fr)_minmax(0,0.9fr)]">
        <GlassCard variant="premium" className="profile-card overflow-hidden p-0">
          <div class="profile-card__grid">
            <div class="profile-card__media bg-[color:var(--black)]/20">
              <figure class="profile-media">
                <div class="profile-media__halo" aria-hidden="true"></div>
                <div class="profile-media__glow" aria-hidden="true"></div>
                <Image
                  src={profileImage}
                  alt="Pete's profile picture"
                  widths={[160, 200, 260, 320]}
                  sizes="(min-width: 1024px) 15rem, (min-width: 768px) 13rem, 12rem"
                  loading="lazy"
                  decoding="async"
                  class="profile-media__image"
                />
              </figure>
              <div class="profile-card__media-meta">
                <span>Bangkok, Thailand</span>
                <span>Research Scientist @ Typhoon</span>
              </div>
            </div>
            <div class="profile-card__content">
              <div class="profile-card__heading">
                <div class="profile-card__title-group">
                  <span class="profile-card__eyebrow">Research & Systems</span>
                  <h2>Pittawat Taveekitworachai (Pete)</h2>
                </div>
              </div>
              <p class="profile-card__bio">
                I explore how large language models reason, create, and assist responsibly. My work
                spans research, product, and community‚Äîturning fragile ideas into dependable systems
                and sharing the playbooks that help others build with confidence.
              </p>
              <div class="profile-card__connect">
                <span class="profile-card__meta-label">Connect</span>
                <nav class="profile-card__social" aria-label="Social links">
                  <a
                    class="social-link"
                    href="https://github.com/Pittawat2542"
                    target="_blank"
                    aria-label="GitHub"
                  >
                    <Github />
                  </a>
                  <a
                    class="social-link"
                    href="https://www.linkedin.com/in/pittawat-tav/"
                    target="_blank"
                    aria-label="LinkedIn"
                  >
                    <Linkedin />
                  </a>
                  <a
                    class="social-link"
                    href="https://www.instagram.com/pete.pittawat/"
                    target="_blank"
                    aria-label="Instagram"
                  >
                    <Instagram />
                  </a>
                  <a
                    class="social-link"
                    href="https://scholar.google.co.jp/citations?user=2CFoP9cAAAAJ&hl=en"
                    target="_blank"
                    aria-label="Google Scholar"
                  >
                    Scholar
                  </a>
                  <a
                    class="social-link"
                    href="https://orcid.org/0000-0002-6824-2634"
                    target="_blank"
                    aria-label="ORCID"
                  >
                    ORCID
                  </a>
                </nav>
              </div>
            </div>
          </div>
        </GlassCard>

        <GlassCard variant="glow" className="profile-metrics overflow-hidden">
          <div class="profile-metrics__backdrop" aria-hidden="true"></div>
          <div class="profile-metrics__inner">
            <header class="profile-metrics__header">
              <span class="profile-metrics__eyebrow">At a glance</span>
              <p>Data points that anchor how I build, teach, and experiment.</p>
            </header>
            <div class="profile-metrics__grid">
              {
                highlightStats.map(stat => (
                  <article class="profile-metric">
                    <span class="profile-metric__value">{stat.value}</span>
                    <p class="profile-metric__label">{stat.label}</p>
                    <p class="profile-metric__description">{stat.description}</p>
                  </article>
                ))
              }
            </div>
          </div>
        </GlassCard>
      </div>
    </section>

    <section id="focus" class="section-canvas">
      <div class="section-heading">
        <h2>Focus & Current Questions</h2>
        <p>
          Each project is a laboratory. Here are the questions that keep me iterating on research,
          infrastructure, and storytelling.
        </p>
      </div>
      <div class="grid gap-5 md:grid-cols-2">
        {
          focusAreas.map(area => (
            <GlassCard variant="premium" className="focus-card h-full">
              <div class="flex items-start gap-3">
                <span class="text-3xl md:text-4xl" aria-hidden="true">
                  {area.emoji}
                </span>
                <div>
                  <h3 class="text-xl font-semibold tracking-tight text-[color:var(--white)] md:text-2xl">
                    {area.title}
                  </h3>
                  <p class="mt-2 text-sm text-[color:var(--white)]/80 md:text-base">
                    {area.description}
                  </p>
                </div>
              </div>
              <ul class="focus-card__list">
                {area.bullets.map(point => (
                  <li>{point}</li>
                ))}
              </ul>
            </GlassCard>
          ))
        }
      </div>
    </section>

    <section id="craft" class="section-canvas">
      <div class="section-heading">
        <h2>How I Build</h2>
        <p>
          Reliability, clarity, and accessibility thread through everything‚Äîfrom research pipelines
          to the tools communities adopt.
        </p>
      </div>
      <div class="grid gap-5 lg:grid-cols-3">
        {
          craftStacks.map(stack => (
            <GlassCard variant="elevated" className="craft-card h-full">
              <h3 class="text-lg font-semibold tracking-tight text-[color:var(--white)] md:text-xl">
                {stack.title}
              </h3>
              <p class="mt-2 text-sm text-[color:var(--white)]/80 md:text-base">
                {stack.statement}
              </p>
              <div class="mt-4 flex flex-wrap gap-2">
                {stack.tools.map(tool => (
                  <Chip>{tool}</Chip>
                ))}
              </div>
              <ul class="craft-card__list">
                {stack.bullets.map(point => (
                  <li>{point}</li>
                ))}
              </ul>
            </GlassCard>
          ))
        }
      </div>
    </section>

    <section id="timeline" class="section-canvas">
      <GlassCard variant="glow" className="timeline-card overflow-hidden p-0">
        <div class="timeline-card__gradient" aria-hidden="true"></div>
        <div class="timeline-card__body">
          <header class="timeline-card__header">
            <div class="timeline-card__headline">
              <span class="timeline-card__eyebrow">Trajectory</span>
              <h2>Trajectory Highlights</h2>
              <p>
                Research milestones, industry sprints, and community-led missions that inform how I
                frame the next question.
              </p>
            </div>
          </header>
          <div class="timeline-card__list">
            <ol>
              {
                timeline.map(item => {
                  const accentVar = `var(--accent-${item.accent ?? 'about'})`;
                  return (
                    <li class={`timeline-item ${item.highlight ? 'timeline-item--highlight' : ''}`}>
                      <span class="timeline-item__marker" style={{ background: accentVar }} />
                      <div class="timeline-item__content">
                        <div class="timeline-item__meta">
                          <span class="timeline-item__accent" style={{ color: accentVar }}>
                            {makeAccentLabel(item.accent)}
                          </span>
                          {item.highlight && <span class="timeline-item__badge">Spotlight</span>}
                        </div>
                        <h3 class="timeline-item__title">{item.title}</h3>
                        <p class="timeline-item__description">{item.description}</p>
                      </div>
                    </li>
                  );
                })
              }
            </ol>
          </div>
        </div>
      </GlassCard>
    </section>

    <section id="journey" class="section-canvas">
      <div class="section-heading">
        <h2>Journey, Community & Service</h2>
        <p>
          Degrees and job titles matter, but the real story lives in the people, places, and service
          moments that shaped my judgment.
        </p>
      </div>
      <div class="grid gap-5 lg:grid-cols-2">
        <GlassCard variant="premium" className="journey-card h-full">
          <h3>Education & Honours</h3>
          <div class="journey-card__group">
            {
              educationEntries.map(entry => (
                <div>
                  <div class="journey-card__header">
                    <p>{entry.title}</p>
                    <span>{entry.period}</span>
                  </div>
                  <p class="journey-card__summary">{entry.summary}</p>
                  <ul class="journey-card__list">
                    {entry.bullets.map(point => (
                      <li>{point}</li>
                    ))}
                  </ul>
                </div>
              ))
            }
          </div>
        </GlassCard>

        <GlassCard variant="premium" className="journey-card h-full">
          <h3>Research & Industry Collaborations</h3>
          <div class="journey-card__group">
            {
              communityHighlights.map(item => (
                <div>
                  <div class="journey-card__header">
                    <p>{item.title}</p>
                  </div>
                  <p class="journey-card__summary">{item.description}</p>
                  <ul class="journey-card__list">
                    {item.bullets.map(point => (
                      <li>{point}</li>
                    ))}
                  </ul>
                </div>
              ))
            }
          </div>
        </GlassCard>

        <GlassCard variant="premium" className="journey-card h-full">
          <h3>Service & Volunteer Leadership</h3>
          <ul class="journey-card__list">
            {serviceHighlights.map(point => <li>{point}</li>)}
          </ul>
        </GlassCard>

        <GlassCard variant="premium" className="journey-card h-full">
          <h3>Lifelong Learning Rituals</h3>
          <ul class="journey-card__list">
            {learningHighlights.map(point => <li>{point}</li>)}
          </ul>
          <Prose className="mt-4 text-sm text-[color:var(--white)]/70">
            <p>
              Learning is how I stay curious and stay kind. Understanding a topic deeply makes it
              easier to design with empathy and to uplift the people building alongside me.
            </p>
          </Prose>
        </GlassCard>
      </div>
    </section>
  </Container>
</BaseLayout>

<style>
  .about-backdrop {
    position: fixed;
    inset: 0;
    overflow: hidden;
    z-index: -2;
    background:
      radial-gradient(circle at 20% 25%, rgba(63, 94, 251, 0.14), transparent 55%),
      radial-gradient(circle at 80% 75%, rgba(244, 114, 182, 0.12), transparent 55%),
      linear-gradient(160deg, rgba(7, 11, 24, 0.96), rgba(9, 13, 28, 0.92));
  }

  .about-backdrop__gradient,
  .about-backdrop__orb,
  .about-backdrop__grid {
    position: absolute;
    inset: -20%;
    pointer-events: none;
  }

  .about-backdrop__gradient {
    background: conic-gradient(
      from 120deg at 50% 50%,
      rgba(59, 130, 246, 0.25),
      rgba(129, 140, 248, 0.15),
      rgba(236, 72, 153, 0.18),
      rgba(59, 130, 246, 0.25)
    );
    filter: blur(160px);
    opacity: 0.7;
    animation: about-spin 42s linear infinite;
  }

  .about-backdrop__orb {
    background: radial-gradient(circle at 60% 40%, rgba(244, 114, 182, 0.18), transparent 70%);
    mix-blend-mode: screen;
    animation: about-drift 32s ease-in-out infinite alternate;
  }

  .about-backdrop__grid {
    background-image:
      linear-gradient(rgba(148, 163, 184, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(148, 163, 184, 0.05) 1px, transparent 1px);
    background-size: 140px 140px;
    transform: rotate(2deg) scale(1.05);
    opacity: 0.4;
    animation: about-grid 38s linear infinite;
  }

  .section-canvas {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .section-heading h2 {
    font-size: clamp(1.75rem, 2vw + 0.5rem, 2.5rem);
    font-weight: 700;
    letter-spacing: -0.01em;
    color: color-mix(in oklab, var(--accent-about) 40%, var(--white));
  }

  .section-heading p {
    margin-top: 0.75rem;
    max-width: 48rem;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.6;
  }

  .hero-action {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: 9999px;
    padding: 0.55rem 1.1rem;
    font-size: 0.95rem;
    background: rgba(15, 23, 42, 0.45);
    border: 1px solid rgba(148, 163, 184, 0.25);
    color: rgba(255, 255, 255, 0.9);
    transition:
      background 0.2s ease,
      transform 0.2s ease,
      border-color 0.2s ease;
  }

  .hero-action svg {
    flex-shrink: 0;
  }

  .hero-action:hover {
    transform: translateY(-2px);
    border-color: color-mix(in oklab, var(--accent-about) 40%, rgba(148, 163, 184, 0.4));
    background: color-mix(in oklab, var(--accent-about) 22%, rgba(15, 23, 42, 0.45));
  }

  .hero-action--primary {
    background: linear-gradient(
      120deg,
      color-mix(in oklab, var(--accent-about) 65%, rgba(14, 23, 42, 0.9)),
      rgba(14, 23, 42, 0.85)
    );
    border-color: color-mix(in oklab, var(--accent-about) 55%, transparent);
  }

  .hero-action--primary:hover {
    background: linear-gradient(
      120deg,
      color-mix(in oklab, var(--accent-about) 75%, rgba(14, 23, 42, 0.9)),
      rgba(14, 23, 42, 0.85)
    );
  }

  .profile-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 10% 10%, rgba(129, 140, 248, 0.18), transparent 55%);
    opacity: 0.7;
    pointer-events: none;
  }

  .profile-card__grid {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: clamp(1.4rem, 2vw, 2.6rem);
  }

  .profile-card__media {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
    justify-content: center;
    padding: clamp(1.6rem, 1.8vw + 1.3rem, 2.4rem);
    border-bottom: 1px solid rgba(148, 163, 184, 0.22);
  }

  .profile-media {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    isolation: isolate;
    width: 100%;
    max-width: 15rem;
    margin: 0;
  }

  .profile-media__halo {
    position: absolute;
    inset: -18%;
    background: radial-gradient(circle at 45% 20%, rgba(129, 140, 248, 0.35), transparent 65%);
    filter: blur(45px);
    opacity: 0.65;
    z-index: 0;
  }

  .profile-media__glow {
    position: absolute;
    inset: 12% 14% 16% 12%;
    background: radial-gradient(circle at 60% 35%, rgba(59, 130, 246, 0.38), transparent 62%);
    filter: blur(55px);
    opacity: 0.6;
    border-radius: 36px;
    z-index: 0;
  }

  .profile-media__image {
    position: relative;
    z-index: 1;
    width: clamp(11rem, 20vw, 13rem);
    height: clamp(11rem, 20vw, 13rem);
    border-radius: 28px;
    object-fit: cover;
    box-shadow: 0 20px 45px rgba(12, 25, 54, 0.45);
    border: 1px solid rgba(255, 255, 255, 0.4);
  }

  .profile-card__media-meta {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    text-align: center;
    font-size: 0.85rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.55);
  }

  .profile-card__media-meta span:last-child {
    font-size: 0.95rem;
    letter-spacing: 0.01em;
    text-transform: none;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.78);
  }

  .profile-card__content {
    position: relative;
    padding: clamp(1.6rem, 2vw + 1.45rem, 2.6rem);
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .profile-card__heading {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .profile-card__title-group {
    display: flex;
    flex-direction: column;
    gap: 0.55rem;
  }

  .profile-card__title-group h2 {
    margin: 0;
    font-size: clamp(2rem, 2.6vw + 1rem, 2.75rem);
    font-weight: 700;
    letter-spacing: -0.01em;
    color: rgba(255, 255, 255, 0.95);
  }

  .profile-card__eyebrow {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: rgba(255, 255, 255, 0.55);
  }

  .profile-card__bio {
    margin: 0;
    font-size: clamp(1rem, 0.4vw + 0.96rem, 1.1rem);
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.78);
    max-width: 46ch;
  }

  .profile-card__connect {
