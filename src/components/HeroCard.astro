---
import { Image } from 'astro:assets';

const { image, url, title, description, isReverse = false } = Astro.props;
---

<div class='flex-1 cursor-pointer glass-card group'>
       <a
               class={`flex w-full flex-col p-8 lg:p-12 gap-8 pointer items-center${isReverse ? ' 2xl:flex-col-reverse' : ' 2xl:flex-col'}`}
               href={url}
       >
               <Image
                        class='flex-1 w-64 lg:w-72 h-64 lg:h-72 rounded-xl transition-transform duration-300 ease-in-out group-hover:scale-105'
                        src={image}
                        alt={title}
                />
               <div class={`flex w-full flex-col flex-3 items-center 2xl:items-start h-full${isReverse ? ' 2xl:items-end' : ''}`}>
                       <h1 class='text-2xl lg:text-3xl mb-4 font-bold tracking-tight'>{title}</h1>
                       <p class={`text-base md:text-lg text-center xl:text-start text-gray-900 dark:text-white break-words hyphens-auto${isReverse ? ' 2xl:text-end' : ''}`}>
                               {description}
                       </p>
               </div>
       </a>
</div>
