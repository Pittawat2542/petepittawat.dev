---
import HeaderLink from './HeaderLink.astro';
import logoImage from '../assets/images/logo.png';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import { BookText, Home, MicVocal, ScrollText, User } from 'lucide-astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header
	class='backdrop-blur-md bg-[color:var(--black-nav)] text-[color:var(--white)] m-0 px-4 md:px-8 shadow-sm border-b border-[color:var(--white)]/10 py-3 fixed w-full z-10 top-0 left-0'
>
	<nav class='flex justify-between items-center gap-4'>
		<h2 class='m-0 text-xl md:text-2xl no-underline'>
			<a class='group text-[color:var(--white)] flex gap-3 md:gap-4 pointers' href='/'
				><Image
					class='h-8 w-8 md:group-hover:animate-shake'
					src={logoImage}
					alt='Main logo of PETEPITTAWAT.DEV'
				/><span
					class='self-center hidden md:inline group-hover:text-[color:var(--accent)] transition-colors duration-300 ease-in-out'
					>{SITE_TITLE}</span
				></a
			>
		</h2>
		<div class='flex items-center gap-3 md:gap-6 overflow-x-auto md:overflow-visible'>
			<HeaderLink class='hidden md:flex' href='/'
				><Home class='hidden lg:inline-block' />Home</HeaderLink
			>
			<HeaderLink href='/blog'
				><BookText class='hidden lg:inline-block' />Blog</HeaderLink
			>
			<HeaderLink href='/publications'
				><ScrollText class='hidden lg:inline-block' />Publications</HeaderLink
			>
			<HeaderLink href='/talks'
				><MicVocal class='hidden lg:inline-block' />Talks</HeaderLink
			>
			<HeaderLink href='/about'
				><User class='hidden lg:inline-block' />About</HeaderLink
			>
			<ThemeToggle />
		</div>
	</nav>
</header>
