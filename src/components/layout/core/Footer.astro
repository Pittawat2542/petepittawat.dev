---
import {
  BookOpenText,
  FolderKanban,
  FileText,
  Mic2,
  User2,
  ExternalLink,
  Github,
  Linkedin,
  Instagram,
} from 'lucide-astro';

const year = new Date().getFullYear();
const quickLinks = [
  { href: '/blog', label: 'Blog', icon: BookOpenText },
  { href: '/projects', label: 'Projects', icon: FolderKanban },
  { href: '/publications', label: 'Publications', icon: FileText },
  { href: '/talks', label: 'Talks', icon: Mic2 },
  { href: '/about', label: 'About', icon: User2 },
];

const socialLinks = [
  { href: 'https://github.com/Pittawat2542', label: 'GitHub', icon: Github },
  { href: 'https://www.linkedin.com/in/pittawat-tav/', label: 'LinkedIn', icon: Linkedin },
  { href: 'https://www.instagram.com/pete.pittawat/', label: 'Instagram', icon: Instagram },
  {
    href: 'https://scholar.google.co.jp/citations?user=2CFoP9cAAAAJ&hl=en',
    label: 'Google Scholar',
  },
  { href: 'https://orcid.org/0000-0002-6824-2634', label: 'ORCID' },
];
---

<footer class="site-footer" style="view-transition-name: site-footer;">
  <div class="site-footer__container">
    <div class="site-footer__grid">
      <div class="site-footer__brand">
        <h2 class="site-footer__title">Building AI with purpose.</h2>
        <p class="site-footer__summary">
          Exploring the intersection of language models, reasoning, and practical AI systems.
          Turning ideas into reliable tools and sharing what I learn along the way.
        </p>
      </div>
      <div class="site-footer__links">
        {
          quickLinks.map(({ href, label, icon: Icon }) => (
            <a href={href} class="site-footer__link">
              <Icon class="site-footer__icon" aria-hidden="true" />
              <span>{label}</span>
            </a>
          ))
        }
      </div>
      <div class="site-footer__contact">
        <div class="flex flex-col gap-3">
          <div class="flex flex-col gap-2">
            {
              socialLinks.map(({ href, label, icon: Icon }) => (
                <a
                  href={href}
                  title={label}
                  aria-label={label}
                  rel="noopener noreferrer"
                  target="_blank"
                  class="site-footer__contact-link"
                >
                  {Icon && <Icon class="site-footer__icon" aria-hidden="true" />}
                  <span>{label}</span>
                  <ExternalLink class="site-footer__icon" aria-hidden="true" />
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="site-footer__bottom">
    <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
      <p class="text-center md:text-left">
        &copy; 2020-{year} Pittawat Taveekitworachai. All rights reserved.
      </p>
      <div class="flex items-center justify-center md:justify-end">
        <a
          href="https://webring.wonderful.software#petepittawat.dev"
          title="วงแหวนเว็บ"
          aria-label="Thai Webring (วงแหวนเว็บ)"
          rel="noopener noreferrer"
          target="_blank"
          class="site-footer__contact-link webring-link"
        >
          <img
            alt="วงแหวนเว็บ"
            class="webring-icon h-7 w-7 rounded-full border border-white/10 bg-white/8 p-1"
            src="https://webring.wonderful.software/webring.white.svg"
            loading="lazy"
            decoding="async"
          />
          <span class="ml-2">Thai Webring</span>
          <ExternalLink class="site-footer__icon ml-1" aria-hidden="true" size={14} />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    margin-top: 4rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(5, 9, 18, 0.92);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.06);
    color: rgba(255, 255, 255, 0.8);
  }

  .site-footer__container {
    max-width: min(1100px, 92vw);
    margin: 0 auto;
    padding: 2.5rem clamp(1.5rem, 4vw, 2.75rem);
  }

  .site-footer__grid {
    display: grid;
    gap: clamp(1.5rem, 4vw, 2.5rem);
    grid-template-columns: repeat(auto-fit, minmax(180px, auto));
    align-items: start;
  }

  .site-footer__brand {
    min-width: 220px;
  }

  .site-footer__title {
    margin: 0 0 0.6rem;
    font-size: 1.3rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.92);
  }

  .site-footer__summary {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
  }

  .site-footer__links,
  .site-footer__contact {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .site-footer__link,
  .site-footer__contact-link {
    color: rgba(255, 255, 255, 0.68);
    font-size: 0.9rem;
    transition: color 160ms ease;
    display: inline-flex;
    align-items: center;
    gap: 0.55rem;
  }

  .site-footer__link:hover,
  .site-footer__link:focus-visible,
  .site-footer__contact-link:hover,
  .site-footer__contact-link:focus-visible {
    color: rgba(255, 255, 255, 0.92);
  }

  .site-footer__icon {
    width: 0.95rem;
    height: 0.95rem;
    opacity: 0.7;
    transition:
      opacity 160ms ease,
      transform 200ms ease;
  }

  .site-footer__link:hover .site-footer__icon,
  .site-footer__link:focus-visible .site-footer__icon,
  .site-footer__contact-link:hover .site-footer__icon,
  .site-footer__contact-link:focus-visible .site-footer__icon {
    opacity: 1;
    transform: translateY(-1px);
  }

  .site-footer__bottom {
    margin: 0 auto;
    max-width: min(1100px, 92vw);
    padding: 1.25rem clamp(1.5rem, 4vw, 2.75rem) 1.8rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    text-align: center;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.55);
  }

  @media (min-width: 768px) {
    .site-footer__grid {
      grid-template-columns: 2fr 1fr 1fr;
    }
    .site-footer__bottom {
      text-align: right;
    }
  }
</style>
