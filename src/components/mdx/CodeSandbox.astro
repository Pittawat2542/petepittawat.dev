---
interface Props {
  id: string;
  title?: string;
}
const { id, title = 'CodeSandbox embed' } = Astro.props as Props;
const src = `https://codesandbox.io/embed/${id}?fontsize=14&hidenavigation=1&theme=dark&view=preview`;
---

<div class="cs-embed">
  <iframe
    src={src}
    title={title}
    loading="lazy"
    allow="accelerometer; ambient-light-sensor; camera; encrypted-media; geolocation; gyroscope; hid; microphone; midi; payment; usb; clipboard-write"
    sandbox="allow-forms allow-modals allow-popups allow-presentation allow-same-origin allow-scripts"
  ></iframe>
</div>

<style is:inline>
  .cs-embed {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
  }
  .cs-embed iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
    border-radius: 0.75rem;
  }
</style>
