---
interface Props {
  children: string | string[];
  variant?: 'default' | 'primary' | 'secondary';
  className?: string;
}

const { children, variant = 'default', className = '' } = Astro.props;

const baseClasses = 'inline-block glass-chip whitespace-nowrap';

const variantClasses = {
  default: '',
  primary: 'bg-[color:var(--accent)] text-black font-medium',
  secondary: 'bg-[color:var(--accent)]/20 text-[color:var(--accent)] border-[color:var(--accent)]/30'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

<span class={classes}>
  <slot />
</span>