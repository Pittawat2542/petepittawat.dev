---
import type { BlogPost } from '../types';
import FormattedDate from './FormattedDate.astro';

const { posts } = Astro.props as { posts: BlogPost[] };
---

{posts.length ? (
  <section class="mt-12">
    <h2 class="text-xl md:text-2xl font-bold tracking-tight mb-4">Related posts</h2>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {posts.map((p) => (
        <li class="rounded-xl border border-[color:var(--white)]/10 p-4 hover:border-[color:var(--accent)]/40 transition-colors">
          <a href={`/blog/${p.slug}/`} class="block">
            <h3 class="font-semibold mb-1">{p.data.title}</h3>
            <p class="text-sm italic opacity-80"><FormattedDate date={p.data.pubDate} /></p>
          </a>
        </li>
      ))}
    </ul>
  </section>
) : null}

