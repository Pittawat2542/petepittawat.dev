---
import type { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'section'> {
  class?: string;
}
const { class: className, ...rest } = Astro.props as Props;
---
<section {...rest} class={`rounded-2xl border border-border bg-card text-card-foreground shadow-sm transition-all duration-300 ease-in-out p-6 md:p-8 ${className ?? ''}`}>
  <slot />
</section>
