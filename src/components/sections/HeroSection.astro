---
import Container from '../ui/core/Container';
import GlassButton from '../ui/navigation/GlassButton';
import { Image } from 'astro:assets';
import { ArrowRight } from 'lucide-astro';
import profileImage from '../../assets/images/profile.jpg';
---

<Container
  className="relative mt-12 flex flex-col-reverse items-center justify-center gap-12 md:mt-16 md:flex-row md:justify-between md:gap-16"
>
  <div class="flex flex-col gap-4 text-center md:gap-3 md:text-left">
    <p class="text-5xl font-bold md:text-6xl">
      <span class="hero-text-gradient-blue">Hello! ðŸ‘‹</span>
    </p>
    <h1 class="text-4xl md:text-5xl">
      I'm <span class="hero-text-gradient-orange font-bold">Pete</span>
    </h1>
    <p class="mt-1 text-xl md:text-2xl">Pittawat Taveekitworachai</p>
    <p class="mt-2 max-w-2xl text-lg text-[color:var(--white)]/80">
      Researcher specializing in Large Language Models, reasoning, and prompt engineering.
    </p>
    <div class="mt-2 flex flex-wrap items-center justify-center gap-3 md:justify-start">
      <GlassButton href="/projects" variant="primary" size="lg">
        View projects
        <ArrowRight class="h-4 w-4" aria-hidden="true" />
      </GlassButton>
      <GlassButton href="/blog" variant="secondary" size="lg">
        Read the blog
        <ArrowRight class="h-4 w-4" aria-hidden="true" />
      </GlassButton>
    </div>
  </div>
  <div class="relative overflow-visible">
    <div
      class="pointer-events-none absolute -inset-4 animate-pulse rounded-full bg-[color:var(--accent)] opacity-25 blur-2xl md:-inset-6"
    >
    </div>
    <Image
      src={profileImage}
      alt="Pete's profile picture"
      loading="eager"
      fetchpriority="high"
      decoding="async"
      widths={[192, 224, 384, 448]}
      sizes="(min-width: 768px) 14rem, 12rem"
      class="avatar-round no-cv relative w-48 object-cover shadow-lg ring-4 ring-[color:var(--white)]/20 transition-[transform,box-shadow,ring-color] duration-200 ease-out will-change-transform hover:-translate-y-1 hover:ring-[color:var(--accent)]/60 md:w-56"
    />
  </div>
</Container>
