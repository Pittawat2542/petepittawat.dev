---
import Container from '@/components/ui/core/Container';
import { HOME_STATS_CONFIG, type HomeStats } from '@/data/homepage';
import { ArrowRight, BookText, Mic, ScrollText } from 'lucide-astro';

interface Props {
  stats: HomeStats;
}

const { stats } = Astro.props as Props;

const iconMap = {
  'book-text': BookText,
  'scroll-text': ScrollText,
  mic: Mic,
} as const;

const cards = HOME_STATS_CONFIG.map(config => ({
  ...config,
  count: stats[config.key] ?? 0,
  Icon: iconMap[config.icon],
}));
---

<Container className="reveal glass-section mt-16">
  <div class="mb-10 text-center md:mx-auto md:max-w-3xl md:text-left lg:mx-0">
    <div
      class="flex items-center justify-center gap-2 text-xs font-semibold tracking-[0.35em] text-[color:var(--white)]/60 uppercase md:justify-start"
    >
      <span
        class="h-2 w-2 rounded-full"
        style={{ backgroundColor: cards[0]?.accentBgColor ?? 'var(--accent)' }}></span>
      Proof of Work
    </div>
    <h2 class="mt-3 text-2xl font-bold tracking-tight md:text-3xl">
      What I publish and share with the community
    </h2>
    <p class="mx-auto mt-2 max-w-2xl text-[color:var(--white)]/80">
      Regular writing, peer-reviewed research, and talks that turn LLM research into approachable
      practice.
    </p>
  </div>

  <ul class="grid grid-cols-1 gap-4 md:grid-cols-3 md:gap-4 lg:gap-6 xl:gap-7">
    {
      cards.map(card => (
        <li class="h-full">
          <a
            href={card.href}
            aria-label={card.ariaLabel}
            class="shape-squircle group flex h-full flex-col gap-5 rounded-3xl border border-white/10 bg-[color:var(--black-nav)]/45 p-5 text-left shadow-lg shadow-black/20 backdrop-blur-sm transition-transform duration-200 ease-out hover:-translate-y-1 hover:border-[color:var(--accent)]/35 hover:bg-[color:var(--black-nav)]/65 focus-visible:ring-2 focus-visible:ring-[color:var(--accent)]/60 focus-visible:ring-offset-2 focus-visible:ring-offset-[color:var(--black)] focus-visible:outline-none md:gap-4 md:p-4"
          >
            <div class="flex items-start justify-between gap-4 md:gap-3">
              <div class="flex items-center gap-3">
                <div
                  class="flex h-11 w-11 shrink-0 items-center justify-center rounded-full border border-white/10 bg-white/5 shadow-inner shadow-black/15 md:h-10 md:w-10"
                  style={{ color: card.accentBgColor }}
                >
                  <card.Icon class="h-5 w-5" aria-hidden="true" />
                </div>
                <div class="space-y-1">
                  <p class="text-xs font-semibold tracking-[0.2em] text-[color:var(--white)]/60 uppercase">
                    {card.title}
                  </p>
                  <p
                    class="text-3xl font-extrabold tracking-tight text-[color:var(--white)] md:text-2xl lg:text-3xl"
                    style={{ color: card.accentBgColor }}
                  >
                    {card.count}
                    {card.count > 0 ? '+' : ''}
                  </p>
                </div>
              </div>
              <div class="flex h-9 w-9 shrink-0 items-center justify-center rounded-full border border-white/10 bg-white/5 text-[color:var(--white)]/70 transition-transform duration-200 group-hover:translate-x-1 group-hover:text-[color:var(--accent)] md:h-8 md:w-8">
                <ArrowRight class="h-4 w-4" aria-hidden="true" />
              </div>
            </div>

            <p class="text-sm text-[color:var(--white)]/72 md:text-[0.85rem] md:leading-snug">
              {card.description}
            </p>

            <div class="mt-auto flex items-center gap-2 pt-2 text-sm font-medium text-[color:var(--white)]/70 md:text-xs">
              <span>{card.linkText}</span>
              <span
                aria-hidden="true"
                class="translate-x-0 transition-transform duration-200 group-hover:translate-x-1"
              >
                â†’
              </span>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</Container>
