---
import Container from './ui/core/Container';
import { BlogCard } from './ui/cards/BlogCard';
import GlassButton from './ui/navigation/GlassButton';
import { ArrowRight } from 'lucide-astro';
import type { BlogPost } from '../types';

interface Props {
  posts: BlogPost[];
  allPosts?: BlogPost[];
}

const { posts, allPosts } = Astro.props as Props;
---

<!-- Latest from the Blog -->
<Container className="reveal glass-section mt-20">
  <div class="mb-8 flex flex-col items-start justify-between gap-4 sm:flex-row sm:items-end">
    <div>
      <h2 class="mb-1 text-2xl font-bold tracking-tight md:text-3xl">Latest from the blog</h2>
      <p class="text-[color:var(--white)]/80">
        Insights, tutorials, and thoughts on AI and technology
      </p>
    </div>
    <GlassButton href="/blog" variant="ghost" size="md">
      Browse all articles
      <ArrowRight class="h-4 w-4" aria-hidden="true" />
    </GlassButton>
  </div>
  <ul class="grid grid-cols-1 gap-6 md:gap-8 xl:grid-cols-3" id="latest-blog">
    {
      posts.map(post => (
        <BlogCard post={post} allPosts={allPosts} horizontalOnSingleColumn={true} />
      ))
    }
  </ul>
</Container>
