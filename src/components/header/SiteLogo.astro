---
import { SITE_TITLE } from '../../consts';
import SiteLogoMotion from './SiteLogoMotion';

export interface Props {
  showTitle?: boolean;
  class?: string;
}

const { showTitle = true, class: className } = Astro.props;
---

<SiteLogoMotion
  siteTitle={SITE_TITLE}
  showTitle={showTitle}
  className={className ?? ''}
  client:idle
/>

<style>
  .site-logo-link {
    position: relative;
    contain: layout paint style;
    will-change: transform;
    transition: background-color 220ms ease;
  }

  .site-logo {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 1rem;
    background: linear-gradient(140deg, rgba(255, 255, 255, 0.28), rgba(106, 193, 255, 0.35));
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.45),
      0 12px 26px -18px rgba(9, 22, 42, 0.85);
    overflow: visible;
    isolation: isolate;
    transform-style: preserve-3d;
  }

  .site-logo__glow {
    position: absolute;
    inset: -25%;
    border-radius: inherit;
    background:
      radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.55), transparent 60%),
      radial-gradient(circle at 75% 75%, rgba(106, 193, 255, 0.35), transparent 65%);
    filter: blur(16px);
    opacity: 0.85;
    z-index: 0;
    will-change: opacity, transform;
  }

  .site-logo__halo {
    position: absolute;
    inset: -8px;
    border-radius: inherit;
    border: 2px solid rgba(255, 255, 255, 0.2);
    opacity: 0.65;
    z-index: 1;
    will-change: opacity, transform;
  }

  .site-logo__orbit {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    transform-origin: 50% 50%;
    z-index: 3;
  }

  .site-logo__spark {
    --orbit-distance: 1.38rem;
    display: inline-flex;
    width: 0.4rem;
    height: 0.4rem;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.92);
    box-shadow: 0 0 0.65rem rgba(255, 255, 255, 0.72);
    mix-blend-mode: screen;
    opacity: 0;
    transform: translateX(var(--orbit-distance));
    will-change: opacity, transform;
  }

  .site-logo__mark {
    position: relative;
    z-index: 2;
    width: 1.9rem;
    height: 1.9rem;
    border-radius: 0.6rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.18);
    will-change: transform;
  }

  @media (prefers-reduced-motion: reduce) {
    .site-logo,
    .site-logo__glow,
    .site-logo__halo,
    .site-logo__spark,
    .site-logo__mark {
      transition-duration: 0.001ms !important;
      animation: none !important;
    }
  }
</style>
