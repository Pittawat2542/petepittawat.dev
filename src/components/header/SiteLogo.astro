---
import { SITE_TITLE } from '../../consts';
import SiteLogoMotion from './SiteLogoMotion';

export interface Props {
  showTitle?: boolean;
  class?: string;
}

const { showTitle = true, class: className } = Astro.props;
---

<SiteLogoMotion
  siteTitle={SITE_TITLE}
  showTitle={showTitle}
  className={className ?? ''}
  client:idle
/>

<style>
  .site-logo-link {
    position: relative;
    contain: layout paint style;
    will-change: transform;
    transition: background-color 220ms ease;
    --logo-accent: var(--accent, #6ac1ff);
  }

  .site-logo {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 1rem;
    background: linear-gradient(
      145deg,
      color-mix(in oklab, var(--logo-accent) 45%, rgba(255, 255, 255, 0.25)),
      rgba(10, 19, 36, 0.92)
    );
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.4),
      0 18px 32px -20px rgba(8, 18, 36, 0.85);
    overflow: visible;
    isolation: isolate;
    transform-style: preserve-3d;
  }

  .site-logo__glow {
    position: absolute;
    inset: -30%;
    border-radius: inherit;
    background:
      radial-gradient(circle at 28% 20%, rgba(255, 255, 255, 0.55), transparent 58%),
      radial-gradient(
        circle at 78% 76%,
        color-mix(in oklab, var(--logo-accent) 32%, rgba(255, 255, 255, 0.2)),
        transparent 62%
      );
    filter: blur(18px);
    opacity: 0.82;
    z-index: 0;
    will-change: opacity, transform;
  }

  .site-logo__field {
    position: absolute;
    inset: -32%;
    border-radius: inherit;
    mix-blend-mode: screen;
    filter: blur(28px);
    opacity: 0.6;
    z-index: 1;
    pointer-events: none;
    will-change: opacity, transform;
  }

  .site-logo__halo {
    position: absolute;
    inset: -7px;
    border-radius: inherit;
    border: 2px solid rgba(255, 255, 255, 0.24);
    opacity: 0.62;
    z-index: 2;
    mix-blend-mode: screen;
    will-change: opacity, transform;
  }

  .site-logo__trail {
    position: absolute;
    inset: -10%;
    border-radius: inherit;
    border: 1.5px solid color-mix(in oklab, var(--logo-accent) 55%, rgba(255, 255, 255, 0.35));
    opacity: 0.18;
    filter: blur(1px);
    z-index: 2;
    pointer-events: none;
    will-change: opacity, transform;
  }

  .site-logo__flare {
    position: absolute;
    inset: -15%;
    border-radius: inherit;
    background: conic-gradient(
      from 120deg,
      transparent 0deg,
      color-mix(in oklab, var(--logo-accent) 30%, rgba(255, 255, 255, 0.24)) 120deg,
      transparent 240deg
    );
    opacity: 0.16;
    z-index: 2;
    mix-blend-mode: screen;
    pointer-events: none;
  }

  .site-logo__orbit {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    transform-origin: 50% 50%;
    z-index: 3;
  }

  .site-logo__spark {
    --orbit-distance: 1.38rem;
    --spark-size: 0.38rem;
    display: inline-flex;
    width: var(--spark-size);
    height: var(--spark-size);
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.92);
    box-shadow: 0 0 0.65rem rgba(255, 255, 255, 0.72);
    mix-blend-mode: screen;
    opacity: 0;
    transform: translateX(var(--orbit-distance));
    will-change: opacity, transform;
  }

  .site-logo__mark {
    position: relative;
    z-index: 4;
    width: 1.9rem;
    height: 1.9rem;
    border-radius: 0.6rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.18);
    will-change: transform;
  }

  .site-logo-link:hover .site-logo,
  .site-logo-link:focus-visible .site-logo {
    background: linear-gradient(
      145deg,
      color-mix(in oklab, var(--logo-accent) 55%, rgba(255, 255, 255, 0.28)),
      rgba(12, 22, 42, 0.9)
    );
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.55),
      0 24px 42px -24px color-mix(in oklab, var(--logo-accent) 32%, rgba(9, 18, 34, 0.9));
  }

  @media (prefers-reduced-motion: reduce) {
    .site-logo,
    .site-logo__glow,
    .site-logo__field,
    .site-logo__halo,
    .site-logo__trail,
    .site-logo__flare,
    .site-logo__spark,
    .site-logo__mark {
      transition-duration: 0.001ms !important;
      animation: none !important;
    }
  }
</style>
