  as?: 'button' | 'a';
  icon?: 'external' | 'arrow-right' | 'chevron-right' | 'search' | 'download' | 'plus' | 'mail';
  iconPosition?: 'left' | 'right';
  iconOnly?: boolean;
  autoIcon?: boolean;
}

