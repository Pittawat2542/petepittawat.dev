---
import katex from 'katex';

const { formula = '', inline = false } = Astro.props;
const html = katex.renderToString(formula, { throwOnError: false });
---

{
  inline ? (
    <span set:html={html} />
  ) : (
    <div class="text-center">
      <span set:html={html} />
    </div>
  )
}

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.css"
  integrity="sha256-eWx5+Ln/4QEwm3H6JDSdOCqf8sVk3uyk51Q2xUFtTAE="
  crossorigin="anonymous"
/>
