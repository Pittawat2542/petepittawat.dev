---
import BaseLayout from './BaseLayout.astro';
import ThemedPageHero from '../components/layout/core/ThemedPageHero';
import Container from '../components/ui/core/Container';

interface HeroProps {
  title: string;
  subtitle?: string;
  page: string;
}
const { title, description, hero, containerClass } = Astro.props as {
  title: string;
  description: string;
  hero: HeroProps;
  containerClass?: string;
};
---

<BaseLayout title={title} description={description} page={hero.page}>
  <ThemedPageHero {...hero} />
  <Container className={containerClass || undefined}>
    <slot />
  </Container>
  <slot name="after" />
  <!-- Optional named slot for content that should appear outside the container -->
</BaseLayout>
