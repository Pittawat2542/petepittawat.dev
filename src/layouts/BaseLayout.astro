---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

import homeOgImage from '../assets/images/home_og_image.jpeg';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead title={title} description={description} image={homeOgImage.src} />
		<link rel='sitemap' href='/sitemap-index.xml' />
	</head>

        <body>
                <a href="#main-content" class="skip-link">Skip to content</a>
                <Header />
                <main id="main-content" class='px-8 md:px-16 mx-auto mt-24 mb-10 max-w-screen-xl'>
                        <slot />
                </main>
                <Footer />
        </body>
</html>
