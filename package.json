{
  "name": "petepittawat.dev",
  "type": "module",
  "version": "1.0.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "prebuild": "node scripts/generate-og.mjs",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . && astro check && tsc --noEmit",
    "lint:fix": "eslint src --ext .ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .astro node_modules/.astro",
    "dev:clean": "npm run clean && npm run dev",
    "generate-favicons": "./scripts/generate-favicons.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,astro,json,md,css,js,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/vite": "^4.1.13",
    "@types/react-dom": "^19.1.9",
    "astro": "^5.14.1",
    "astro-robots-txt": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "katex": "^0.16.22",
    "lucide-astro": "^0.544.0",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-compiler-runtime": "19.1.0-rc.3",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tailwindcss/typography": "^0.5.18",
    "@types/katex": "^0.16.7",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss-animate": "^1.0.7"
  },
  "packageManager": "pnpm@10.18.3"
}
